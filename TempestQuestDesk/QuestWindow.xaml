<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TempestQuestDesk"
        xmlns:QuestUCLib="clr-namespace:QuestUCLib;assembly=QuestUCLib" x:Class="TempestQuestDesk.QuestWindow"
        mc:Ignorable="d"
        Title="QuestWindow" Height="650" Width="450" Closing="Window_Closing" Icon="Resources/TempesT.bmp">
    <DockPanel x:Name="pMain" LastChildFill="True" Background="Indigo">
        <StackPanel x:Name="spButtons" DockPanel.Dock="Bottom" Orientation="Horizontal" Height="100" Background="BlueViolet">
            <Button x:Name="bUpdateQuest" Content="Оновити" Background="SpringGreen" Padding="10" Margin="10" Width="120" Click="bUpdateQuest_Click"/>

            <QuestUCLib:UserControl1 Width="100"  Padding="10"/>
        </StackPanel>
    </DockPanel>
</Window>
